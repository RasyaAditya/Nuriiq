<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:layout_marginBottom="300dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:src="@drawable/img_6"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="30dp"/>


    <ImageView
        android:layout_width="166dp"
        android:layout_height="136dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:background="@drawable/rectangle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Daftar"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:layout_width="358dp"
            android:layout_height="71dp"
            android:text="Buat lengkap akun kamu"
            android:textSize="16dp"
            android:textColor="#8A8A8A"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/poppins_bold"/>

        <EditText
            android:layout_width="358dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:background="@drawable/bkg_edit"
            android:drawableStart="@drawable/img_7"
            android:text="Nama Awal"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#8A8A8A"
            android:paddingLeft="20dp"
            android:drawablePadding="20dp"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="358dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bkg_edit"
            android:drawableStart="@drawable/img_7"
            android:text="Nama Akhir"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#8A8A8A"
            android:paddingLeft="20dp"
            android:drawablePadding="20dp"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="358dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bkg_edit"
            android:drawableStart="@drawable/img_8"
            android:text="Email"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#8A8A8A"
            android:paddingLeft="20dp"
            android:drawablePadding="20dp"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="358dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bkg_edit"
            android:drawableStart="@drawable/img_9"
            android:text="Kata Sandi"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#8A8A8A"
            android:paddingLeft="20dp"
            android:drawablePadding="20dp"
            android:textSize="16sp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="358dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bkg_daftar"
            android:text="Daftar"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="358dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="27dp"
            android:drawableStart="@drawable/img_10"
            android:padding="17dp"
            android:text="Daftar dengan Google"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/bkg_google"
            />


    </LinearLayout>

</RelativeLayout>