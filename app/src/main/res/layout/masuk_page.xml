<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:layout_marginBottom="300dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:src="@drawable/img_6"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="30dp"/>


    <ImageView
        android:layout_width="166dp"
        android:layout_height="136dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Selamat Datang"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:layout_width="358dp"
            android:layout_height="71dp"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Buat lengkap akun kamu"
            android:textColor="#8A8A8A"
            android:textSize="16dp" />

        <EditText
            android:layout_width="358dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:background="@drawable/bkg_edit"
            android:drawableStart="@drawable/img_8"
            android:drawablePadding="29dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="20dp"
            android:text="Email"
            android:textColor="#8A8A8A"
            android:textSize="16sp" />

        <EditText
            android:layout_width="358dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bkg_edit"
            android:drawableStart="@drawable/img_9"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="20dp"
            android:text="Kata Sandi"
            android:textColor="#8A8A8A"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="358dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bkg_daftar"
            android:text="Masuk"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:layout_width="91dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Lupa Sandi"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/tambahan"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="358dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:padding="17dp"
            android:text="Daftar"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/bkg_google"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="358dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="27dp"
            android:drawableStart="@drawable/img_10"
            android:padding="17dp"
            android:text="Daftar dengan Google"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/bkg_google"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="150dp"
            android:layout_height="3dp"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="20dp"
            android:background="#C4C3C3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="538dp"
            android:layout_marginLeft="10dp"
            android:text="atau"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16sp"/>

        <View
            android:layout_width="150dp"
            android:layout_height="3dp"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="10dp"
            android:background="#C4C3C3"/>
    </LinearLayout>

</RelativeLayout>